{
  "applications": {
    "gecko": {
      "id": "keebird-xn1@kee-org",
      "strict_min_version": "68.1.0"
    }
  },
  "manifest_version": 2,
  "name": "KeeBird",
  "version": "2.0.1",
  "author": "Chris Tomlinson",
  "homepage_url": "http://github.com/kee-org/keebird",
  "description": "Use KeePass Password Safe to manage your login credentials.",
  "icons": {
    "48": "icon.png",
    "64": "icon64.png"
  },
  "experiment_apis": {
    "WindowListener": {
      "schema": "api/windowListener/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["WindowListener"]],
        "script": "api/windowListener/implementation.js"
      }
    }
  },
  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
      "storage",
      "activeTab",
      "tabs",
      "tabHide"
    ]
}
